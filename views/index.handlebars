<div class="container">

  <h1>Eat Da Burger!</h1>
  <p>
    Add a burger that you would like to try.
  </p>
  <h2>Add a Burger</h2>
  <form class="create-form">
    <div class="form-group">
      <label for="burger">New Burger Name:</label>
      <input type="text" id="burger" name="burger_name">
      <button type="submit">Add Burger</button>
    </div>

  </form>
  <div class="row">
    <div class="cols">
      <h2>New Burgers to be eaten!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="eat-burger" data-id="{{id}}" data-newdevoured="{{devoured}}">
            DEVOUR IT!
          </button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="cols">
      <h2>Burgers that have been devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>{{burger_name}}</li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>